<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sky.mapper.UserMapper">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into user (openid, name, phone, sex, id_number, avatar, create_time)
        values (#{openid}, #{name}, #{phone}, #{sex}, #{idNumber}, #{avatar}, #{createTime})
    </insert>

    <select id="getByOpenId" resultType="com.sky.entity.User">
        select *
        from user
        where openid = #{openid}
    </select>

    <select id="getById" resultType="com.sky.entity.User">
        select *
        from user
        where id = #{id}
    </select>

    <select id="getTotalUserAmountSoFar" resultType="java.lang.Integer">
        select count(0)
        from user
        <where>
            <if test="endTime != null">create_time <![CDATA[<]]> #{endTime}</if>
        </where>
    </select>

    <select id="getTodayNewUserAmount" resultType="java.lang.Integer">
        select count(0)
        from user
        <where>
            <if test="beginTime != null">create_time <![CDATA[>=]]> #{beginTime}</if>
            <if test="endTime != null">and create_time <![CDATA[<]]> #{endTime}</if>
        </where>
    </select>
</mapper>